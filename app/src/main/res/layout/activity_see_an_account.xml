<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greycurves"
    tools:context=".SeeAnAccountActivity">

    <TextView
        android:id="@+id/acctext"
        android:layout_width="317dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="47dp"
        android:gravity="center"
        android:text="Account"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@+id/acctext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/curved_butts_my_grey"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text=""
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@+id/username_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/curved_butts_my_grey"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text=""
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/platform_text"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_below="@+id/password_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/curved_butts_my_grey"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text=""
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry"/>

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="144dp"
        android:layout_height="60dp"
        android:layout_below="@+id/platform_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="125dp"
        android:background="@drawable/curved_butts_my_grey"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="26sp" />
</RelativeLayout>